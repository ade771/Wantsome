@model List<TemaParcursTutorialASP.Models.Employee>

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<p> Number of employees: @Model.Count.</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th></th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.EmployeeId</td>
            <td>@employee.EmployeeName</td>
            <td>@employee.Age</td>
            <td>
                @Html.ActionLink("View", "View", "Employee", new { id = employee.EmployeeId }, null) |
                @Html.ActionLink("Edit", "Edit", "Employee", new { id = employee.EmployeeId }, null)
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Create Employee", "Create", "Employee")
